; ------------------------------
;           ORG     #3F9C       ; turboR PCM enabler (MSX2+ only)
            ORG     #3FA0
; ------------------------------

WRTC:       EQU     #01FA       ; 1D10=MSX2, 1C9E=MSX2+, 1C9C=MSXtR, 01FA=ANY

; ------------------------------
;           LD      A,3         ; suggested by HRA!
;           OUT     (#A5),A     ; turboR PCM is ON
; ------------------------------
            LD      HL,FREE
            LD      C,%010000
wLOOP:
            LD      A,(HL)
            INC     HL
            PUSH    AF
            CALL    WRTC
            POP     AF
            RRCA
            RRCA
            RRCA
            RRCA
            INC     C
            CALL    WRTC
            INC     C
            LD      A,C
            AND     15
            CP      #E
            JR      NZ,wLOOP
            INC     C
            INC     C

            LD      A,%1000000
            CP      C
            JR      NZ,wLOOP
            JP      #512

FREE:       DB      0,0,0,0,0,1,#90,#A,0,#50,#F,0,0,#A0,#F0,#34,#D4,4,0,0,#B0
